@model DruPortalMvc.Models.HizmetViewModel
@{
    ViewData["Title"] = "Hizmet Sil";
}
<h2>Hizmet Sil</h2>
<div class="alert alert-danger">Bu hizmeti silmek istediğinize emin misiniz?</div>
<dl class="row">
    <dt class="col-sm-2">Adı</dt>
    <dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">Başlık</dt>
    <dd class="col-sm-10">@Model.Title</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form> 